<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
       

        <record id="view_res_port_list" model="ir.ui.view">
            <field name="name">Ports</field>
            <field name="model">res.port</field>
            <field eval="6" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Contact Port">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_res_port_form" model="ir.ui.view">
            <field name="name">Contact port</field>
            <field name="model">res.port</field>
            <field name="arch" type="xml">
                <form string="Contact port">
                    <sheet>
                        <group col="4">
                            <field name="name" placeholder='e.g. "Consulting Services"'/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="res_port_view_search" model="ir.ui.view">
            <field name="name">res.port.view.search</field>
            <field name="model">res.port</field>
            <field name="arch" type="xml">
                <search string="Search port ">
                    <field name="name"/>
                </search>
            </field>
        </record>


        <record id="action_partner_res_port_form" model="ir.actions.act_window">
            <field name="name">Contact ports</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.port</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="res_port_view_search"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a Port
              </p>
            </field>
        </record>

        <menuitem id="menu_partner_port_form"
        action="action_partner_res_port_form"
        name="Ports"
        sequence="2" parent="contacts.res_partner_menu_config"/>
    
        
    
    </data>
    

</odoo>
