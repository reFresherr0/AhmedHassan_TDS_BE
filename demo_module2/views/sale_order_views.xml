<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_form_custom_test_field" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.test.field</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="test_field" ></field> 
                    <field name="test2_field"></field>
                    <field name="ext_reg_no"></field>
                    <field name="x" />
                    <field name="y" />
                    <field name="z" />
                </xpath>
                <xpath expr="//field[@name='partner_invoice_id']" position="replace">
                    <field name="partner_invoice_id" context="{'default_type':'invoice'}" options='{"always_reload": True}'/>

                    
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="widget">many2one_avatar</attribute>
                </xpath>
              
            </data>
        </field>
    </record>

</odoo>
